@using QuanLiCuaHang.ENTITIES;
@using QuanLiCuaHang.BUSSINESS_SERVICE;
@{
    Layout = null;
    String Chuoi = string.Empty;
    String maHoaDon = Request["maHoaDon"];
    if (string.IsNullOrEmpty(maHoaDon))
    {
        Chuoi = "Ma hoa don nay khong hop le";
    }
    else
    {
        HOADON hdNhapHang = XL_HD_NHAPHANG.TimKiemHDNhapHang_MaHD(maHoaDon);
        if (string.IsNullOrEmpty(hdNhapHang.maHoaDon))
        {
            Chuoi = "Ma hoa don nay khong ton tai";
        }
        else
        {
            {
                if (IsPost)
                {
                    XL_HD_NHAPHANG.XoaHDNhapHang(maHoaDon);
                    Response.Redirect("~/UI/HOADON_NHAPHANG/MH_HD_NHAPHANG.cshtml");
                }

            }
        }
    }
}
